<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

 <body>
   <div class="container">
       <div class="row">
        <div class="mx-auto">
            <h1>行きたいリスト</h1>
          <table class="table">
            <!--テーブルヘッダ-->
            <thead>
              <tr>
                <th>サウナ名</th>
                <th>Tag</th>
              </tr>
            </thead>
            <!--テーブルの項目設定(投稿承認されたもの=is_approveがtrueのみのものを表示)-->
           <% @sauna_list.each do |sauna| %>

                    <% if sauna.is_approve==true%>
                       <tbody>
                         <tr>
                           <td><div><%= link_to sauna_path(sauna.id) do %><%= sauna.name%><% end %></div></td>
                           <% sauna.tags.each do |tag| %>
                           <td><div><%= tag.tag_name%></div></td>
                         </tr>
                       </tbody>
                   <% end %>
                 <% end %>
           <% end %>
           </table>
         </div>
       </div>
    </div>
 </body>
 </html>
