<html>
  <head>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>
  <body>
    <div class="container">
       <div class="row">
        <div class="mx-auto">
　　　　<h1>レビュー詳細</h1>
        <div>レビューサウナ:<%=@review_detail.sauna.name%></div>
        <div>レビューユーザー:<%=@review_detail.member.name%></div>
        <div>レビュー日:<%= l @review_detail.updated_at%></div>
        <div>レビュー内容:<%=@review_detail.review_content%></div>
        <!--このページのレビュー情報を渡す-->
        <%= form_with model: @review_detail ,url: admin_review_confirm_path(@review_detail.id), method: :GET do |f|%>
　　　　<%= f.submit "レビュー削除", class:  'btn btn-danger'%>
　　　　<% end %>
        </div>
    </div>
  </body>
</html>
