<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

 <body>
   <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto">
          <h1><%=@member.name%>さんの会員詳細</h1>
            <div class="member">会員ID:<%= @member.id %></div>
            <div class="member">氏名:<%= @member.name%></div>
            <div class="member">フリガナ:<%= @member.name_kana %></div>
            <div class="member">出身地:<%= @member.birth_place %></div>
            <div class="member">メールアドレス:<%= @member.email %></div>
            <div class="member">会員ステータス:<%= @member.is_deleted ? '退会' : '有効'%></div>
            <div><%=link_to 'レビュー履歴' ,admin_path(@member.id) ,method: :GET ,class: 'btn btn-success'%></div>
            <div><%=link_to 'ユーザーを無効にする',admin_member_withdraw_path(@member.id), method: :PATCH,class: 'btn btn-danger'%></div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
