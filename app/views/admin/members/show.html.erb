<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
  </head>

 <body>
   <main>
    <div class="container">
      <div class="row">
        <div class="mx-auto">
          <h1><%=@member.name%>さんの会員詳細</h1>
          <div class="text-left pt-4 pb-3">
            <h4>氏名</h4>
              <div class="text-center"><%= @member.name%></div>
          </div>

          <div class="text-left pt-4 pb-3">
            <h4>フリガナ</h4>
              <div class="text-center"><%= @member.name_kana %></div>
          </div>

          <div class="text-left pt-4 pb-3">
            <h4>出身地</h4>
              <div class="text-center"><%= @member.birth_place %></div>
          </div>

          <div class="text-left pt-4 pb-3">
            <h4>メールアドレス</h4>
              <div class="text-center"><%= @member.email %></div>
          </div>

          <div class="text-left pt-4 pb-3">
            <h4>会員ステータス</h4>
              <div class="text-center"><%= @member.is_deleted ? '退会' : '有効'%></div>
          </div>

            <div class="text-center"><%=link_to 'レビュー履歴' ,admin_path(@member.id) ,method: :GET ,class: 'btn btn-success'%>
            <%=link_to 'ユーザーを無効にする',admin_member_withdraw_path(@member.id), method: :PATCH,class: 'btn btn-danger'%></div>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
